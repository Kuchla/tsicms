<section id="faqs">
  <div class="container text-center">
    <div class="row">
      <div class="col-lg-10 mx-auto">
        <h2 class="section-heading">FAQs</h2>
        <hr class="my-4">
        <%@faqs.each do |f| %>
        <div class="card">
          <div class="card-body">
            <h4 class="m-0">
              <%= f.title %>
            </h4>
            <p class="text-muted mb-0">
              <%= f.answer %>
            </p>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
