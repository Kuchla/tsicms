<% provide(:page_title, 'Histórico de Monitorias') %>

<div class="show-info">
  <div class="container text-center">
    <h2 class="mb-4">Histórico de Monitorias de Disciplinas -
      <%= link_to "Home", root_path, class: 'btn btn-primary' %>
    </h2>
    <hr class="my-4">
    <div class="row">
      <hr class="my-4">
      <%@discipline_monitors.each do |dm| %>
      <div class="col-sm-6 py-2">
        <div class="card h-100">
          <div class="card-body">
            <div class="media">
              <div class="media-body">
                <small>
                  <strong>Disciplinas:</strong>
                  <% dm.discipline_monitor_disciplines.each do |d| %>
                  <%= d.discipline.name %>
                  <% end %>
                </small>
                <hr class="gray">
                <small>
                  <Strong>Ano/Semestre:</Strong>
                  <%= dm.year %> -
                  <%= t("enums.semesters.#{dm.semester}") %> --
                  <Strong>Tipo da monitoria: </Strong>
                  <%= dm.monitor_type.name %>
                </small>
                <hr>
                <ul class="social-links list-inline mb-0 mt-2">
                  <li class="list-inline-item">
                    <%= image_tag dm.academic.image.url, class:'avatar avatar-md mr-3' %>
                    <div>
                      <div>
                        <%= dm.academic.name %>
                      </div>
                      <small class="d-block text-muted">Monitor</small>
                    </div>
                  </li>
                  <% dm.discipline_monitor_professors.each do |d| %>
                  <li class="list-inline-item">
                    <%= image_tag d.professor.image.url, class:'avatar avatar-md mr-3' %>
                    <div>
                      <div>
                        <%= d.professor.name %>
                      </div>
                      <small class="d-block text-muted">Orientador</small>
                    </div>
                  </li>
                  <% end %>
                </ul>
                <hr>
                <small>
                  <Strong>Descrição:</Strong>
                  <%= dm.description %>
                </small>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <hr class="my-4">
    <%= link_to "Home", root_path, class: 'btn btn-primary' %>
  </div>
</div>
