<h3 class="mb-3">Nome: <%= @activity.name %></h3>
<h3 class="mb-3">Descricao: <%= @activity.description %></h3>


<div class="table-responsive">
  <table class="table table-data card-table table-vcenter text-nowrap">
    <thead>
    <tr>
      <th class="w-1">Id</th>
      <th>Professor</th>
      <th>Data de in√≠cio</th>
      <th>Data de fim</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @activity.activity_professors.each do |professor| %>
      <tr>
        <td><%= professor.professor.id %></td>
        <td><%= professor.professor.name %></td>
        <td><%= l(professor.start_date, format: :long) %></td>
        <td><%= current_date(professor.end_date) %></td>
        <td>
          <%= link_to admins_professor_path(professor) do %>
                <span class="icon mr-3">
                    <i class="fa fa-eye" data-toggle="tooltip" data-placement="top" title="Mostrar"></i>
                </span>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
