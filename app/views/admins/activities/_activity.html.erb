<tr>
  <td><%= activity.name %></td>
  <td><%= t("helpers.boolean.#{activity.description}") %></td>
  <td><%= l(activity.created_at, format: :long) %></td>
  <td>
    <%= link_to edit_admins_activity_path(activity) do %>
        <span class="icon mr-3">
            <i class="fas fa-edit" data-toggle="tooltip" data-placement="top" title="Editar"></i>
        </span>
    <% end %>

    <%= link_to [:admins, activity], method: :delete, data: { confirm: t('prompt.confirm') } do %>
        <span class="icon mr-3">
            <i class="fas fa-trash-alt" data-toggle="tooltip" data-placement="top" title="Remover"></i>
        </span>
    <% end %>
  </td>
</tr>
