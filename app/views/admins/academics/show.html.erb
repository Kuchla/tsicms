<div class="col-lg-12 col-xl-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Acadêmico</h3>
        </div>
    </div>
                    
    <div class="card-body">
        <p>
            <div class="form-row">
                <div class="col-4">
                    <%= image_tag @academic.image.url %>
                </div>
            </div>
        </p>
        <p>
            <strong>Nome:</strong>
            <%= @academic.name %>
        </p>
        <p>
            <strong>Está formado?</strong>
            <%= academic_graduated(@academic.graduated) %> 
        </p>
        <p>
            <strong>Contato:</strong>
            <a href="<%= @academic.contact %>" target="_blank"><%= @academic.contact %>  </a>
        </p> 
    </div>      
    <div class="btn-list text-right">
        <%= link_to "Voltar", admins_academics_path, class: 'btn btn-secondary' %>
        <%= link_to 'Editar Acadêmico', edit_admins_academic_path(@academic.id), class: 'btn btn-primary ml-auto' %>
    </div>
</div>