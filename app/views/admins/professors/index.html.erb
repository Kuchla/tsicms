<% provide(:page_title, 'Professores') %>

<div class="text-right">
  <%= link_to new_admins_professor_path,
              class: 'btn btn-secondary',
              title: 'Novo Professor',
              data: { toggle: 'tooltip', placement: 'top' } do %>
    <i class="fas fa-plus"></i>
  <% end %>
</div>

<div class="table-responsive">
  <table class="table card-table table-vcenter text-nowrap" id="professors_table">
    <thead>
    <tr>
      <th class="w-1">No.</th>
      <th>Nome</th>
      <th>Criado</th>
      <th>Atualidado</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <%= render @professors %>
    </tbody>
  </table>
</div>
