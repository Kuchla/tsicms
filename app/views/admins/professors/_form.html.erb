<%= simple_form_for @professor, url: [:admins, @professor], method: local_assigns[:my_action], authenticity_token: true do |f| %>
  <%= f.input :name, required: true %>
  <%= f.input :lattes, required: true %>
  <%= f.input :occupation_area, required: true %>
  <%= f.input :email, required: true %>
  <%= f.association :professor_title, label_method: :description %>
  <%= f.association :professor_category %>
  <%= f.button :submit %>
<% end %>